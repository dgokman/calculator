
   <div id="calculator">


   <div id="screen">
   <% if @number.nil? %>
   <% Number.limit(9).each do |number| %>
   <span id="number">
   <%= number.number %>
   </span>
   <% end %>
   <% end %>
   <% if @number %>
   <%= @number.to_f %>
   <% end %>
   <% if @result %>
   <%= @result.to_f %>
   <% end %>
   </div>


   <div id="top_line">
   <form action="/7" method="post">
    <input class="button" type="submit" value="7"/>
   </form>
   <form action="/8" method="post">
    <input class="button" type="submit" value="8"/>
   </form>
   <form action="/9" method="post">
    <input class="button" type="submit" value="9"/>
   </form>
    <form action="divide" method="post">
    <input class="button" type="submit" value="/"/>
   </form>
   </div>

   <div id="second_line">
   <form action="/4" method="post">
    <input class="button" type="submit" value="4"/>
   </form>
   <form action="/5" method="post">
    <input class="button" type="submit" value="5"/>
   </form>
   <form action="/6" method="post">
    <input class="button" type="submit" value="6"/>
   </form>
    <form action="times" method="post">
    <input class="button" type="submit" value="*"/>
   </form>
   </div>

   <div id="third_line">
   <form action="/1" method="post">
    <input class="button" type="submit" value="1"/>
   </form>
   <form action="/2" method="post">
    <input class="button" type="submit" value="2"/>
   </form>
   <form action="/3" method="post">
    <input class="button" type="submit" value="3"/>
   </form>
    <form action="/minus" method="post">
    <input class="button" type="submit" value="-"/>
   </form>
   </div>

   <div id="fourth_line">
   <form action="/0" method="post">
    <input class="button" type="submit" value="0"/>
   </form>
   <form action="/dec" method="post">
    <input class="button" type="submit" value="."/>
   </form>
   <form action="/equal" method="post">
    <input class="button" type="submit" value="="/>
   </form>
   <form action="/plus" method="post">
    <input class="button" type="submit" value="+"/>
   </form>
   </div>

   <div id="fifth_line">
   <form action="/clear" method="post">
    <input class="button" type="submit" value="clear"/>
   </form>
   </div>

   </div>



